    <LinearLayout
        android:id="@+id/statuslayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/buttonend"
        app:layout_constraintEnd_toStartOf="@+id/appbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ctrl1">

        <CheckBox
            android:id="@+id/havemidi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            />

        <ImageView
            android:id="@+id/midilogo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/midilogoheight"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/midi_logo" />

        <CheckBox
            android:id="@+id/haveclock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sclock"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/statusclocksize"
            android:textStyle="bold"
            />
        
    </LinearLayout>
        
    <org.gnu.itsmoroto.midandpad.CCBar
        android:id="@+id/ctrl1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:backgroundColor="@color/noprogresscolor"
        app:progressColor="@color/progresscolor"
        app:textColor="@color/bartextcolor"
        app:defaultValue="140"
        app:imageEnabled="false"
        app:textEnabled="false"
        app:max="127"
        app:step="1"
        app:textBottomPadding="@integer/barbottompadding"
        app:textSize="@dimen/barlabelsize"
        app:touchDisabled="true"
        android:layout_margin="@dimen/stdmargin"
        app:layout_constraintBottom_toTopOf="@+id/label1"
        app:layout_constraintEnd_toStartOf="@+id/ctrl2"
        app:layout_constraintStart_toEndOf="@+id/buttonend"
        app:layout_constraintTop_toBottomOf="@+id/statuslayout"/>
    <org.gnu.itsmoroto.midandpad.CCBar
        android:id="@+id/ctrl2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:backgroundColor="@color/noprogresscolor"
        app:progressColor="@color/progresscolor"
        app:textColor="@color/bartextcolor"
        app:defaultValue="140"
        app:imageEnabled="false"
        app:textEnabled="false"
        app:max="127"
        app:step="1"
        app:textBottomPadding="@integer/barbottompadding"
        app:textSize="@dimen/barlabelsize"
        app:touchDisabled="true"
        android:layout_margin="@dimen/stdmargin"
        app:layout_constraintBottom_toTopOf="@+id/label2"
        app:layout_constraintEnd_toStartOf="@+id/appbar"
        app:layout_constraintStart_toEndOf="@+id/ctrl1"
        app:layout_constraintTop_toBottomOf="@+id/statuslayout"/>

    <org.gnu.itsmoroto.midandpad.CCBar
        android:id="@+id/ctrl3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:backgroundColor="@color/noprogresscolor"
        app:progressColor="@color/progresscolor"
        app:textColor="@color/bartextcolor"
        app:defaultValue="140"
        app:imageEnabled="false"
        app:textEnabled="false"
        app:max="127"
        app:step="1"
        app:textBottomPadding="@integer/barbottompadding"
        app:textSize="@dimen/barlabelsize"
        app:touchDisabled="true"
        android:layout_margin="@dimen/stdmargin"
        app:layout_constraintBottom_toTopOf="@+id/label3"
        app:layout_constraintEnd_toStartOf="@+id/ctrl4"
        app:layout_constraintStart_toEndOf="@+id/buttonend"
        app:layout_constraintTop_toBottomOf="@+id/label1"/>
    <org.gnu.itsmoroto.midandpad.CCBar
        android:id="@+id/ctrl4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:backgroundColor="@color/noprogresscolor"
        app:progressColor="@color/progresscolor"
        app:textColor="@color/bartextcolor"
        app:defaultValue="140"
        app:imageEnabled="false"
        app:textEnabled="false"
        app:max="127"
        app:step="1"
        app:textBottomPadding="@integer/barbottompadding"
        app:textSize="@dimen/barlabelsize"
        app:touchDisabled="true"
        android:layout_margin="@dimen/stdmargin"
        app:layout_constraintBottom_toTopOf="@+id/label4"
        app:layout_constraintEnd_toStartOf="@+id/appbar"
        app:layout_constraintStart_toEndOf="@+id/ctrl3"
        app:layout_constraintTop_toBottomOf="@+id/label2"/>

    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/stdmargin"
        android:layout_marginStart="@dimen/stdmargin"
        android:layout_marginEnd="@dimen/stdmargin"
        android:textSize="@dimen/barlabelsize"
        android:inputType="none"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/ctrl3"
        app:layout_constraintEnd_toStartOf="@+id/label2"
        app:layout_constraintStart_toEndOf="@+id/buttonend"
        app:layout_constraintTop_toBottomOf="@+id/ctrl1" />
    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/stdmargin"
        android:layout_marginStart="@dimen/stdmargin"
        android:layout_marginEnd="@dimen/stdmargin"
        android:textSize="@dimen/barlabelsize"
        android:text="TextView"
        android:inputType="none"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/ctrl4"
        app:layout_constraintEnd_toStartOf="@+id/appbar"
        app:layout_constraintStart_toEndOf="@+id/label1"
        app:layout_constraintTop_toBottomOf="@+id/ctrl2" />
    <TextView
        android:id="@+id/label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/stdmargin"
        android:layout_marginStart="@dimen/stdmargin"
        android:layout_marginEnd="@dimen/stdmargin"
        android:textSize="@dimen/barlabelsize"
        android:text="TextView"
        android:inputType="none"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/labelpreset"
        app:layout_constraintEnd_toStartOf="@+id/label4"
        app:layout_constraintStart_toEndOf="@+id/buttonend"
        app:layout_constraintTop_toBottomOf="@+id/ctrl3" />
    <TextView
        android:id="@+id/label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/stdmargin"
        android:layout_marginStart="@dimen/stdmargin"
        android:layout_marginEnd="@dimen/stdmargin"
        android:textSize="@dimen/barlabelsize"
        android:text="TextView"
        android:inputType="none"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/labelpreset"
        app:layout_constraintEnd_toStartOf="@+id/appbar"
        app:layout_constraintStart_toEndOf="@+id/label3"
        app:layout_constraintTop_toBottomOf="@+id/ctrl4" />
    <TextView
        android:id="@+id/labelpreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/stdmargin"
        android:layout_marginStart="@dimen/stdmargin"
        android:layout_marginEnd="@dimen/stdmargin"
        android:textSize="@dimen/barlabelsize"
        android:text="TextView"
        android:inputType="none"
        android:textColor="@color/textcolor"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/appbar"
        app:layout_constraintStart_toEndOf="@+id/buttonend"
        app:layout_constraintTop_toBottomOf="@+id/label3" />
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ctrl4"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/layout_background">

        <!--<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">-->

        <ImageButton
            android:id="@+id/buttonmidi"
            android:layout_width="@dimen/menubuttonsize"
            android:layout_height="@dimen/menubuttonsize"
            android:scaleType="fitCenter"
            android:src="@drawable/midiconnector"
            app:layout_constraintBottom_toTopOf="@+id/buttonexplore"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/buttoncalib"
            android:layout_width="@dimen/menubuttonsize"
            android:layout_height="@dimen/menubuttonsize"
            android:scaleType="fitCenter"
            android:src="@drawable/calibration"
            app:layout_constraintBottom_toTopOf="@+id/buttonexplore"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonmidi" />

            <ImageButton
                android:id="@+id/buttonexplore"
                android:layout_width="@dimen/menubuttonsize"
                android:layout_height="@dimen/menubuttonsize"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/explore_icon"
                app:layout_constraintBottom_toTopOf="@+id/buttonsave"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttoncalib" />
            <ImageButton
                android:id="@+id/buttonsave"
                android:layout_width="@dimen/menubuttonsize"
                android:layout_height="@dimen/menubuttonsize"
                android:scaleType="fitCenter"

                android:layout_marginTop="10dp"
                android:src="@drawable/saveicon"
                app:layout_constraintBottom_toTopOf="@+id/buttonsaveas"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonexplore" />

            <ImageButton
                android:id="@+id/buttonsaveas"
                android:layout_width="@dimen/menubuttonsize"
                android:layout_height="@dimen/menubuttonsize"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"
                android:src="@drawable/saveasicon"
                app:layout_constraintBottom_toTopOf="@+id/buttonedit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonsave" />

            <ImageButton
                android:id="@+id/buttonedit"
                android:layout_width="@dimen/menubuttonsize"
                android:layout_height="@dimen/menubuttonsize"
                android:adjustViewBounds="true"
                android:background="@android:drawable/btn_default"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"
                android:src="@drawable/editicon"
                app:layout_constraintBottom_toTopOf="@+id/buttonrun"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonsaveas" />

            <ImageButton
                android:id="@+id/buttonrun"
                android:layout_width="@dimen/menubuttonsize"
                android:layout_height="@dimen/menubuttonsize"
                android:adjustViewBounds="true"
                android:background="@color/design_default_color_secondary"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"
                android:src="@drawable/playbuttonclear"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonedit" />
        <!--</androidx.constraintlayout.widget.ConstraintLayout>-->
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60" />
</androidx.constraintlayout.widget.ConstraintLayout>